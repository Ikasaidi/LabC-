        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdeaManager.UI"
        xmlns:viewmodels="clr-namespace:IdeaManager.UI.ViewModels" 
        xmlns:views="clr-namespace:IdeaManager.UI.Views"
        mc:Ignorable="d"
        Title="app" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ContentControl x:Name="MenuPlaceholder" Grid.Row="0" />
        <ContentControl x:Name="MainContent" Grid.Row="1" />
    </Grid>
    
        
    
</Window>
